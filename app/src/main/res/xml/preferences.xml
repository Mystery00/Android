<?xml version="1.0" encoding="utf-8"?><!--最新栏目的新闻-->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout="@layout/preference_item"
    android:title="设置">

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="基本设置">
        <SwitchPreference
            android:defaultValue="true"
            android:key="key_keep_activity"
            android:layout="@layout/preference_item"
            android:summary="按Back键退出时，保留前台界面"
            android:title="保留前台" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="key_night_mode"
            android:layout="@layout/preference_item"
            android:summary="按两次Back键退出"
            android:title="确定退出" />
        <Preference
            android:layout="@layout/preference_item"
            android:summary="删除已缓存的文章内容及图片"
            android:title="清空缓存" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="关于与帮助">
        <Preference
            android:layout="@layout/preference_item"
            android:summary="当前版本 1.0.0（20）"
            android:title="检查更新" />
        <Preference
            android:layout="@layout/preference_item"
            android:title="开源许可" />
        <Preference
            android:layout="@layout/preference_item"
            android:title="去评价" />
        <Preference
            android:layout="@layout/preference_item"
            android:title="意见反馈" />
        <Preference
            android:layout="@layout/preference_item"
            android:title="联系我" />
    </PreferenceCategory>

    <Preference
        android:layout="@layout/preference_logout_item"
        android:title="退出登录" />
    <Preference
        android:layout="@layout/preference_copyright"
        android:title="© 2017 ghui.me" />

</PreferenceScreen>