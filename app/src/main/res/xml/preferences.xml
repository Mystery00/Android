<?xml version="1.0" encoding="utf-8"?><!--最新栏目的新闻-->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout="@layout/preference_item"
    android:title="设置">

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="基本">
        <Preference
            android:key="@string/pref_key_clear_cache"
            android:layout="@layout/preference_item"
            android:summary="@string/cache_summary"
            android:title="清除缓存" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_key_shortcuts_back_to_home"
            android:layout="@layout/preference_item"
            android:summary="通过快捷菜单启动App后返回时回到首页而不是关闭App"
            android:title="返回到首页" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_key_long_press_thx"
            android:layout="@layout/preference_item"
            android:summary="开启后长按才能发送感谢"
            android:title="长按感谢" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_key_auto_checkin"
            android:layout="@layout/preference_item"
            android:summary="开启后当你每次打开App时会尝试自动签到"
            android:title="自动签到" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="显示">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_key_title_overview"
            android:layout="@layout/preference_item"
            android:summary="列表标题最多显示两行（标题刷新后生效）"
            android:title="标题概览" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_key_title_btn_overlay"
            android:layout="@layout/preference_item"
            android:summary="回复框或浮动按钮被遮挡，请开启此选项"
            android:title="被遮挡" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_key_hide_create_btn"
            android:layout="@layout/preference_item"
            android:summary="开启以隐藏首页右下角发贴按钮"
            android:title="隐藏发帖按钮" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_key_highlight_comment_num"
            android:layout="@layout/preference_item"
            android:summary="开启以高亮评论数"
            android:title="高亮评论" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_key_highlight_topic_owner_reply_item"
            android:layout="@layout/preference_item"
            android:summary="开启后可以高亮楼主的回帖"
            android:title="高亮楼主回帖" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="关于">
        <Preference
            android:key="@string/pref_key_trello"
            android:layout="@layout/preference_item"
            android:summary="这里有项目的最新开发计划..."
            android:title="Trello主页" />
        <Preference
            android:key="@string/pref_key_check_update"
            android:layout="@layout/preference_item"
            android:title="检查更新" />
        <Preference
            android:key="@string/pref_key_v2er_pro"
            android:layout="@layout/preference_item"
            android:summary="@string/go_get_pro_summary"
            android:title="@string/go_get_pro_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="联系">
        <Preference
            android:key="@string/pref_key_user_group"
            android:layout="@layout/preference_item"
            android:summary="加入V2er用户群，有问题直接反馈"
            android:title="用户群" />
        <Preference
            android:key="@string/pref_weibo_personal_page"
            android:layout="@layout/preference_item"
            android:summary="@string/weibo_username"
            android:title="Weibo" />
        <Preference
            android:key="@string/pref_twitter_personal_page"
            android:layout="@layout/preference_item"
            android:summary="@string/twitter_username"
            android:title="Twitter" />
    </PreferenceCategory>

    <Preference
        android:key="@string/pref_key_value_toggle_log"
        android:layout="@layout/preference_logout_item"
        android:title="@string/logout_str" />
    <Preference
        android:key="@string/pref_key_value_copyright"
        android:layout="@layout/preference_copyright"
        android:title="© 2017 ghui.me" />
</PreferenceScreen>