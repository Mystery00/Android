<?xml version="1.0" encoding="utf-8"?><!--最新栏目的新闻-->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout="@layout/preference_item"
    android:title="设置">

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="基本设置">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_key_keep_activity"
            android:layout="@layout/preference_item"
            android:summary="按Back键退出时，保留前台界面"
            android:title="保留前台" />
        <Preference
            android:key="@string/pref_key_clear_cache"
            android:layout="@layout/preference_item"
            android:summary="删除已缓存的图片"
            android:title="清空缓存" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="关于与帮助">
        <Preference
            android:key="@string/pref_key_check_update"
            android:layout="@layout/preference_item"
            android:summary="当前版本 1.0.0（20）"
            android:title="检查更新" />
        <Preference
            android:layout="@layout/preference_item"
            android:title="开源许可" />
        <Preference
            android:key="@string/pref_key_rate"
            android:layout="@layout/preference_item"
            android:title="去评价" />
        <Preference
            android:layout="@layout/preference_item"
            android:title="意见反馈" />
        <Preference
            android:layout="@layout/preference_item"
            android:title="联系" />
    </PreferenceCategory>

    <Preference
        android:key="@string/pref_key_value_toggle_log"
        android:layout="@layout/preference_logout_item"
        android:title="退出登录" />
    <Preference
        android:layout="@layout/preference_copyright"
        android:title="© 2017 ghui.me">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/official_website" />
    </Preference>

</PreferenceScreen>