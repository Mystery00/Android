<resources>

    <!-- Base application theme. -->
    <style name="Base.App.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="AppTheme" parent="Base.App.Theme" />

    <style name="App.Translucent.NavBar.Theme" parent="AppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
