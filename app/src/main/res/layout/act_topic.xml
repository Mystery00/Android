<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/avatar_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name_tv"
        style="@style/TitleText"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/avatar_img"
        app:layout_constraintTop_toTopOf="@id/avatar_img"
        tools:text="ghui" />

    <TextView
        android:id="@+id/time_tv"
        style="@style/hintText"
        android:layout_marginStart="11dp"
        app:layout_constraintBaseline_toBaselineOf="@id/user_name_tv"
        app:layout_constraintLeft_toRightOf="@id/user_name_tv"
        tools:text="1小时17分钟前" />

    <me.ghui.v2ex.widget.TagView
        android:id="@+id/tagview"
        style="@style/smallText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatar_img"
        tools:text="问与答" />

    <TextView
        android:id="@+id/view_count_tv"
        style="@style/hintText"
        android:gravity="top"
        android:paddingTop="0dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar_img"
        app:layout_constraintLeft_toLeftOf="@id/user_name_tv"
        app:layout_constraintVertical_bias="0.0"
        tools:text="点击164" />

    <TextView
        android:id="@+id/comment_num_tv"
        style="@style/hintText"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/view_count_tv"
        app:layout_constraintStart_toEndOf="@+id/view_count_tv"
        tools:layout_editor_absoluteY="33dp"
        tools:text="评论32" />

    <TextView
        android:id="@+id/title_tv"
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/tagview"
        app:layout_constraintStart_toStartOf="@id/avatar_img"
        app:layout_constraintTop_toBottomOf="@id/avatar_img"
        tools:text="想玩玩 Linux ,有没有钱再买电脑，怎么破？" />

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"
        app:layout_constraintStart_toStartOf="@id/title_tv"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />

    <TextView
        android:id="@+id/content_tv"
        style="@style/BodyText"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="@id/tagview"
        app:layout_constraintStart_toStartOf="@id/avatar_img"
        app:layout_constraintTop_toBottomOf="@id/divider_view"
        tools:text="媳妇的 iphone 掉了, 想买个安卓机, 2000 以下, 丢了不容易心疼." />

    <me.ghui.v2ex.widget.AppendTopicContentView
        android:id="@+id/append_topic_contentview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/avatar_img"
        app:layout_constraintTop_toBottomOf="@id/content_tv" />

    <View
        android:id="@+id/divider_view_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"
        app:layout_constraintStart_toStartOf="@id/title_tv"
        app:layout_constraintTop_toBottomOf="@+id/append_topic_contentview" />

    <me.ghui.v2ex.widget.LoadMoreRecyclerView
        android:id="@+id/recyclerview_act_topic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_tv" />

</android.support.constraint.ConstraintLayout>
