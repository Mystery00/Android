<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/pro_logo_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/vector_v2er_pro" />

    <TextView
        style="@style/SubTitleText"
        android:layout_width="match_parent"
        android:gravity="left"
        android:padding="16dp"
        android:text="获取高级版你可以 : "
        android:textColor="@color/white" />
    <TextView
        style="@style/ProItem"
        android:text="1. 支持V2er项目的长期开发、激励开发者做的更好" />
    <TextView
        style="@style/ProItem"
        android:text="2. 解锁高级版特性，包括后续新增的所有高级版功能" />
    <TextView
        style="@style/ProItem"
        android:text="3. 优先体验新功能" />
    <TextView
        android:id="@+id/go_get_pro_btn"
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:foreground="?android:selectableItemBackgroundBorderless"
        android:gravity="center"
        android:padding="16dp"
        android:text="Get"
        android:textColor="@color/white"
        android:textStyle="italic|bold" />
    <TextView
        style="@style/hintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onNoResponseClicked"
        android:gravity="right"
        android:padding="16dp"
        android:text="点击无反应？" />
</LinearLayout>