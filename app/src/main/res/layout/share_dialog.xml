<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_dialog_rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <TextView
        style="@style/TitleText"
        android:padding="12dp"
        android:text="分享" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:id="@+id/share_item_3"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_telegram"
                android:text="Telegram" />

            <TextView
                android:id="@+id/share_item_7"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_twitter"
                android:text="Twitter" />

            <TextView
                android:id="@+id/share_item_8"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_copylink"
                android:text="复制" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/share_item_9"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_more"
                android:text="更多" />
        </TableRow>
    </TableLayout>
</LinearLayout>