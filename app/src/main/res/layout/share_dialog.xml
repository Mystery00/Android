<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_dialog_rootview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <TextView
        style="@style/TitleText"
        android:padding="12dp"
        android:text="分享" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:orientation="vertical">

            <TextView
                android:id="@+id/share_item_3"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_telegram"
                android:text="Telegram" />

            <TextView
                android:id="@+id/share_item_1"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_wechat_timeline"
                android:text="朋友圈" />

            <TextView
                android:id="@+id/share_item_2"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_wechat"
                android:text="微信好友" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/share_item_4"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_weibo"
                android:text="微博" />

            <TextView
                android:id="@+id/share_item_5"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_qq"
                android:text="QQ" />

            <TextView
                android:id="@+id/share_item_6"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_wx_favorite"
                android:text="微信收藏" />


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/share_item_7"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_twitter"
                android:text="Twitter" />

            <TextView
                android:id="@+id/share_item_8"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_copylink"
                android:text="复制" />

            <TextView
                android:id="@+id/share_item_9"
                style="@style/ShareItem"
                android:drawableTop="@drawable/ic_share_more"
                android:text="更多" />
        </TableRow>
    </TableLayout>
</LinearLayout>