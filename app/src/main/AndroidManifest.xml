<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.ghui.v2er">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".general.App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <activity
            android:name=".module.splash.LauncherActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <activity
            android:name=".module.general.OiaActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                //1. node
                <data
                    android:host="@string/www_host"
                    android:pathPrefix="@string/node_url_prefix"
                    android:scheme="@string/scheme_https" />
                //2. member
                <data
                    android:host="@string/www_host"
                    android:pathPrefix="@string/member_url_prefix"
                    android:scheme="@string/scheme_https" />
                //3. topic
                <data
                    android:host="@string/www_host"
                    android:pathPrefix="@string/topic_url_prefix"
                    android:scheme="@string/scheme_https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.home.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.drawer.dailyhot.DailyHotActivity"
            android:label="今日热议"
            android:parentActivityName=".module.home.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.topic.TopicActivity"
            android:label="话题"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".module.login.LoginActivity"
            android:label="登录V2EX"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.login.TwoStepLoginActivity"
            android:label="两步验证"
            android:screenOrientation="portrait"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".module.login.SignInWithGoogleActivity"
            android:label="Sign in With Google"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.user.UserHomeActivity"
            android:label="主页"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.drawer.care.SpecialCareActivity"
            android:label="特别关注"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.drawer.star.StarActivity"
            android:label="收藏"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.node.NodeTopicActivity"
            android:label="节点"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.settings.SettingActivity"
            android:label="设置"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.create.CreateTopicActivity"
            android:label="创作新主题"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.imgviewer.ImageViewer"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".module.general.WapActivity"
            android:label="" />
        <activity
            android:name=".module.settings.ProInfoActivity"
            android:label="获取Pro版" />
    </application>

</manifest>